<?xml version="1.0"?>
<config>
    <modules>
        <Janrain_JUMP>
            <version>0.1.0</version>
        </Janrain_JUMP>
    </modules>

    <frontend>
        <layout>
            <updates>
                <jump>
                    <file>jump.xml</file>
                </jump>
            </updates>
        </layout>
        <routers>
            <jump>
                <use>standard</use>
                <args>
                    <module>Janrain_JUMP</module>
                    <frontName>janrain</frontName>
                </args>
            </jump>
        </routers>
    </frontend>

    <global>
        <blocks>
            <jump>
                <class>Janrain_JUMP_Header_Block</class>
                <class>Janrain_JUMP_Widget_Block</class>
            </jump>
        </blocks>

        <models>
            <janrain_jump>
                <class>Janrain_JUMP_Model</class>
            </janrain_jump>
        </models>

        <helpers>
            <janrain_jump>
                <class>Janrain_JUMP_Helper</class>
            </janrain_jump>
        </helpers>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <jump>
                                            <title>JUMP</title>
                                        </jump>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
