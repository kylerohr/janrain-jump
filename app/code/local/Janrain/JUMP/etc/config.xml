<?xml version="1.0"?>
<config>
	<modules>
		<Janrain_JUMP>
			<version>0.2.0</version>
		</Janrain_JUMP>
	</modules>
	<frontend>
		<routers>
			<customer>
				<use>standard</use>
				<args>
					<modules>
						<Janrain_JUMP before="Mage_Customer_AccountController">Janrain_JUMP</Janrain_JUMP>
					</modules>
				</args>
			</customer>
		</routers>
	</frontend>
	<global>
		<!-- Observer to load the classloader and handle pre-load initialization -->
		<events>
			<controller_front_init_before>
				<observers>
					<janrain_jump>
						<type>singleton</type>
						<class>Janrain_JUMP_Model_Observer</class>
						<method>controller_front_init_before</method>
					</janrain_jump>
				</observers>
			</controller_front_init_before>
			<controller_action_layout_generate_xml_before>
				<observers>
					<janrain_jump>
						<type>singleton</type>
						<class>Janrain_JUMP_Model_Observer</class>
						<method>controller_action_layout_generate_xml_before</method>
					</janrain_jump>
				</observers>
			</controller_action_layout_generate_xml_before>
		</events>

		<blocks>
			<janrain_jump>
				<class>Janrain_JUMP_Block</class>
			</janrain_jump>
		</blocks>

		<models>
			<janrain_jump>
				<class>Janrain_JUMP_Model</class>
				<resourceModel>janrainjump_resource</resourceModel>
			</janrain_jump>
			<janrainjump_resource>
				<class>Janrain_JUMP_Model_Resource</class>
				<entities>
					<user>
						<table>janrain_jump</table>
					</user>
				</entities>
			</janrainjump_resource>
		</models>

		<helpers>
			<janrain_jump>
				<class>Janrain_JUMP_Helper</class>
			</janrain_jump>
		</helpers>

		<resources>
			<jump_setup>
				<setup>
					<module>Janrain_JUMP</module>
					<class>Mage_Customer_Model_Entity_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</jump_setup>
			<jump_write>
				<connection>
					<use>core_write</use>
				</connection>
			</jump_write>
			<jump_read>
				<connection>
					<use>core_read</use>
				</connection>
			</jump_read>
		</resources>
	</global>
</config>
